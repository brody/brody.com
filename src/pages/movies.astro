---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import LibraryItem from '../components/LibraryItem.astro'
import LazyLoadList from '../components/LazyLoadList'

const pageTitle = 'Movies'
const allMovies = (await getCollection('movies')).map((item) => ({ ...item, source: 'movies' }))

// Sort movies by publication date (newest first)
const sortedMovies = allMovies
  .filter((item) => item.data.pubDate) // Filter out items without dates
  .sort((a, b) => {
    const dateA = a.data.pubDate
      ? typeof a.data.pubDate === 'string'
        ? new Date(a.data.pubDate)
        : a.data.pubDate
      : new Date(0)
    const dateB = b.data.pubDate
      ? typeof b.data.pubDate === 'string'
        ? new Date(b.data.pubDate)
        : b.data.pubDate
      : new Date(0)
    return dateB.getTime() - dateA.getTime()
  })

// Only render first 12 items
const initialMovies = sortedMovies.slice(0, 12)
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class='text-tx-0 text-h1 font-heading mb-3'>{pageTitle}</h1>

  <p class='text-tx-2 mb-8'>Movies I've watched, with ratings and thoughts.</p>

  <ul class='space-y-0'>
    {
      initialMovies.map((movie, index) => {
        // Use eager loading for first 3 items (above the fold), lazy for the rest
        const loading = index < 3 ? 'eager' : 'lazy'

        return (
          <>
            <LibraryItem
              url={`/movies/${movie.id}/`}
              title={movie.data.title}
              pubDate={movie.data.pubDate}
              source={movie.source}
              imageUrl={'imageUrl' in movie.data ? movie.data.imageUrl : undefined}
              imageAlt={'imageAlt' in movie.data ? movie.data.imageAlt : undefined}
              inProgress={'inProgress' in movie.data ? movie.data.inProgress : undefined}
              year={'year' in movie.data ? movie.data.year : undefined}
              rating={'rating' in movie.data ? movie.data.rating : undefined}
              description={'description' in movie.data ? movie.data.description : undefined}
              loading={loading}
            />
          </>
        )
      })
    }

    <LazyLoadList
      client:load
      initialCount={12}
      totalCount={sortedMovies.length}
      contentType='movies'
    />
  </ul>
</BaseLayout>
