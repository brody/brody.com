---
import { getCollection, getEntry, render } from 'astro:content'
import MarkdownPostLayout from '../../layouts/MarkdownPostLayout.astro'
import Source from '../../components/Source.astro'

export async function getStaticPaths() {
  const posts = await getCollection('bookmarks')
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }))
}

// Get slug from params for SSR mode
const { slug } = Astro.params
const post = Astro.props.post || (await getEntry('bookmarks', slug as string))

if (!post) {
  return Astro.redirect('/404')
}

const { Content } = await render(post)
---

<MarkdownPostLayout frontmatter={post.data}>
  <Content />

  {
    (post.data.source || post.data.imageUrl) && (
      <Source
        sourceTitle={post.data.sourceTitle || post.data.title}
        url={post.data.source || '#'}
        imageUrl={post.data.imageUrl}
        description={post.data.description}
        loading='lazy'
        class:list={['add', 'dynamic', { classNames: true }]}
      />
    )
  }
</MarkdownPostLayout>
