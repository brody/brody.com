---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import LibraryItem from '../components/LibraryItem.astro'
import LazyLoadList from '../components/LazyLoadList'

const pageTitle = 'Games'
const allGames = (await getCollection('games')).map((item) => ({ ...item, source: 'games' }))

// Sort games by publication date (newest first)
const sortedGames = allGames
  .filter((item) => item.data.pubDate) // Filter out items without dates
  .sort((a, b) => {
    const dateA = a.data.pubDate
      ? typeof a.data.pubDate === 'string'
        ? new Date(a.data.pubDate)
        : a.data.pubDate
      : new Date(0)
    const dateB = b.data.pubDate
      ? typeof b.data.pubDate === 'string'
        ? new Date(b.data.pubDate)
        : b.data.pubDate
      : new Date(0)
    return dateB.getTime() - dateA.getTime()
  })

// Only render first 12 items
const initialGames = sortedGames.slice(0, 12)
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class='text-tx-0 text-h1 font-heading mb-3'>{pageTitle}</h1>

  <p class='text-tx-2 mb-8'>Games I've played, with ratings and thoughts.</p>

  <ul class='space-y-0'>
    {
      initialGames.map((game, index) => {
        // Use eager loading for first 3 items (above the fold), lazy for the rest
        const loading = index < 3 ? 'eager' : 'lazy'

        return (
          <div data-lazy-item>
            <LibraryItem
              url={`/games/${game.id}/`}
              title={game.data.title}
              pubDate={game.data.pubDate}
              source={game.source}
              imageUrl={'imageUrl' in game.data ? game.data.imageUrl : undefined}
              imageAlt={'imageAlt' in game.data ? game.data.imageAlt : undefined}
              inProgress={'inProgress' in game.data ? game.data.inProgress : undefined}
              year={'year' in game.data ? game.data.year : undefined}
              rating={'rating' in game.data ? game.data.rating : undefined}
              description={'description' in game.data ? game.data.description : undefined}
              loading={loading}
            />
          </div>
        )
      })
    }
  </ul>

  <LazyLoadList client:load initialCount={12} totalCount={sortedGames.length} contentType='games' />
</BaseLayout>
